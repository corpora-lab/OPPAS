program:
bool  okay;
s8 tmp, left, right, lo, hi, piv, swapLeft, swapRight;
s8[2] a;


main() {
	left = 0s8;
	right = 1s8;
	a[0s8] = *;
	a[1s8] = *;
	qs();
}

qs() {
	if (left >= right) {
	} else {
		piv = a[right]; 
		lo = left;
		hi = right;
		while (lo <= hi) { 
			if (a[hi] > piv){
				hi = hi - 1s8; 
			} else {
				swapLeft = lo;
				swapRight = hi;
				swapElements();
				lo = lo + 1s8;
			}
		}

		// recursive calls
		if (lo == 0s8 && right == 1s8){
			qsRec0();
		} else {
			qsRec1();
		}
	}
}

swapElements() {
	tmp = a[swapLeft];
	a[swapLeft] = a[swapRight];
	a[swapRight] = tmp;
	okay = a[0s8] <= a[1s8];
}

//recursive cases depending on the value of lo and right for a two-elements array
qsRec0() {
	right = hi;
	qs();
	left = 0s8; 
	right = 1s8;
	qs();
}

qsRec1() {
	right = hi;
	qs();
	//abort second recursive call, it involves at most one element
	//qs();
}

